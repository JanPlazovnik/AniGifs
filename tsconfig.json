{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ]
    },
    "baseUrl": ".",
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {  "files": true }
}